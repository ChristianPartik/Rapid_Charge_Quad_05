<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <com.larswerkman.holocolorpicker.ColorPicker
        android:id="@+id/color_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.larswerkman.holocolorpicker.ValueBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/valuebar"
        android:layout_below="@+id/Blau"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/Rot"
        android:layout_below="@+id/color_picker"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/Gr端n"
        android:layout_below="@+id/Rot"
        android:layout_alignLeft="@+id/Rot"
        android:layout_alignStart="@+id/Rot"
        android:textColor="#5af600" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/Blau"
        android:layout_below="@+id/Gr端n"
        android:layout_alignRight="@+id/Gr端n"
        android:layout_alignEnd="@+id/Gr端n"
        android:textColor="#0011ff" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beleuchtung"
        android:id="@+id/switch1"
        android:layout_below="@+id/valuebar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:checked="false" />


</RelativeLayout>